@model WebProject.Models.ViewModels.PlaceViewModel
@{
    ViewBag.Title = @Html.DisplayFor(model => model.Name);
}

<h2><span class="glyphicon glyphicon-star" aria-hidden="true"></span><span class="glyphicon glyphicon-star" aria-hidden="true"></span><span class="glyphicon glyphicon-star" aria-hidden="true"></span> @Html.DisplayFor(model => model.Name) <small>Country: @Html.DisplayFor(model => model.Country), added by:  @Html.DisplayFor(model => model.UserName)</small> </h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <img src="@Url.Content(Model.Photo_URI)" alt="Image" class="img-responsive img-thumbnail" style="max-height:400px; display: block; margin: auto;" />
    </div>
    <div class="panel-body">

      

        <div class="display-field">
            @Html.DisplayFormattedData(Model.Content)
        </div>
    </div>
</div>
<!-- Indicates a successful or positive action -->
<button type="button" class="btn btn-success">Show on the map</button>

<!-- Contextual button for informational alert messages -->
<button type="button" class="btn btn-info">Search Flights</button>
<div id="comments">
    @{Html.RenderAction("Place", "Comment", new { id = ViewBag.PlaceId });}
</div>